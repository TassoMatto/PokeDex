<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PokeDex.MainPage"
             xmlns:viewmodel="clr-namespace:PokeDex.ViewModels"
             x:DataType="viewmodel:MainPageVM"
             xmlns:models="clr-namespace:PokeDex.Models">

    <StackLayout>
        <!-- Commenti per ricordarmi -->
        <CollectionView 
            ItemsSource="{Binding pokemonORC}" 
            VerticalOptions="FillAndExpand" 
            RemainingItemsThreshold="6" 
            RemainingItemsThresholdReachedCommand="{Binding LoadMorePokemonsCommand}">
            
            <CollectionView.ItemTemplate>

                <DataTemplate x:DataType="models:Pokemon">
                    <Border BackgroundColor="Gray" Padding="10" Margin="10">
                        <VerticalStackLayout x:DataType="models:Pokemon">

                            <HorizontalStackLayout>
                                <Border
                                    WidthRequest="100"
                                    HeightRequest="100"
                                    Stroke="Gray"
                                    StrokeThickness="1"
                                    StrokeShape="RoundRectangle 200"
                                    BackgroundColor="Red"
                                    >
                                    <Image
                                        WidthRequest="99"
                                        HeightRequest="99"
                                        Source="{Binding img_url}">
                                        
                                    </Image>
                                </Border>
                                <Label Text="Nome: "></Label>
                                <Label Text="{Binding name}"></Label>
                            </HorizontalStackLayout>

                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>

            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>

</ContentPage>
